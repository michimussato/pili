        -font "tinyBoldLabelFont" 
        -image "uvlayout-run.xpm" 
        -image1 "uvlayout-run.xpm" 
        -style "iconOnly" 
        -marginWidth 1
        -marginHeight 1
        -command "uvlayout_run;\n" 
