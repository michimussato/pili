        -width 34
        -height 34
        -manage 1
        -visible 1
        -preventOverride 0
        -align "center" 
        -label "Stop" 
        -labelOffset 0
        -font "tinyBoldLabelFont" 
        -image "uvlayout-stop.xpm" 
        -image1 "uvlayout-stop.xpm" 
        -style "iconOnly" 
        -marginWidth 1
